#/usr/bin/bash
pdflatex --output-directory ../pdf Thesis.tex
cd ../pdf
bash buildBiblio
cd ../tex
pdflatex --output-directory ../pdf Thesis.tex
pdflatex --output-directory ../pdf Thesis.tex

pdflatex --output-directory ../pdf Ch1.tex
cd ../pdf
bash buildBiblioCh1
cd ../tex
pdflatex --output-directory ../pdf Ch1.tex
pdflatex --output-directory ../pdf Ch1.tex

pdflatex --output-directory ../pdf Ch2.tex
cd ../pdf
bash buildBiblioCh2
cd ../tex
pdflatex --output-directory ../pdf Ch2.tex
pdflatex --output-directory ../pdf Ch2.tex

pdflatex --output-directory ../pdf Ch3.tex
cd ../pdf
bash buildBiblioCh1
cd ../tex
pdflatex --output-directory ../pdf Ch3.tex
pdflatex --output-directory ../pdf Ch3.tex

pdflatex --output-directory ../pdf Ch4.tex
cd ../pdf
bash buildBiblioCh4
cd ../tex
pdflatex --output-directory ../pdf Ch4.tex
pdflatex --output-directory ../pdf Ch4.tex

if [! -e cat.tex]; then
	cat  preamble.tex ch1/background.tex ch1/graph.tex ch1/linkages.tex ch1/polygonallinkages.tex ch1/diskarrangements.tex ch1/configurationspaces.tex ch1/complexity.tex ch1/RSA.tex ch1/satisfiability.tex ch1/problemdefinition.tex ch1/RelatedWork.tex ch2/LogicEngineV3.tex ch2/HingedPolygonsV3.tex ch3v2/ch3Introduction.tex ch3v2/auxiliaryConstruction.tex ch3v2/modifiedAuxiliaryConstruction.tex ch3v2/lemma5.tex ch3v2/angularArgument.tex ch3v2/verticalArgument.tex ch3v2/horizontalArgument.tex ch3v2/lemma5Conclusion.tex ch3v2/theoremConclusion.tex ch4/chapter4IntroductionV2.tex ch4/Hausdorff.tex ch4/WeightedTreeFamily.tex ch4/PertubedTree.tex ch4/proofs.tex postfix.tex > cat.tex
else
	rm cat.tex
	cat  preamble.tex ch1/background.tex ch1/graph.tex ch1/linkages.tex ch1/polygonallinkages.tex ch1/diskarrangements.tex ch1/configurationspaces.tex ch1/complexity.tex ch1/RSA.tex ch1/satisfiability.tex ch1/problemdefinition.tex ch1/RelatedWork.tex ch2/LogicEngineV3.tex ch2/HingedPolygonsV3.tex ch3v2/ch3Introduction.tex ch3v2/auxiliaryConstruction.tex ch3v2/modifiedAuxiliaryConstruction.tex ch3v2/lemma5.tex ch3v2/angularArgument.tex ch3v2/verticalArgument.tex ch3v2/horizontalArgument.tex ch3v2/lemma5Conclusion.tex ch3v2/theoremConclusion.tex ch4/chapter4IntroductionV2.tex ch4/Hausdorff.tex ch4/WeightedTreeFamily.tex ch4/PertubedTree.tex ch4/proofs.tex postfix.tex > cat.tex
fi

pdflatex --output-directory ../pdf cat.tex
cd ../pdf
bash buildBiblioCat
cd ../tex
pdflatex --output-directory ../pdf cat.tex
pdflatex --output-directory ../pdf cat.tex